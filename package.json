{
  "name": "motion",
  "version": "6.0.1-alpha.3",
  "description": "The Motion library for the web",
  "author": "Matt Perry",
  "main": "dist/cjs.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": "./dist/es/index.js",
    "./bezier": "./dist/es/easing/cubic-bezier.js",
    "require": "./dist/cjs.js",
    "default": "./dist/es/index.js"
  },
  "license": "MIT",
  "repository": "https://github.com/mattgperry/motion",
  "sideEffects": false,
  "keywords": [
    "motion",
    "animation",
    "bezier",
    "cubic bezier",
    "easing"
  ],
  "scripts": {
    "build": "tsc -p . && rollup -c && bundlesize",
    "test": "jest --coverage --config jest.config.json --maxWorkers=2",
    "format": "yarn prettier --write .",
    "postpublish": "git push --tags",
    "prepublishOnly": "yarn test && yarn build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "../../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.test.(ts|js)$",
    "rootDir": "src",
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/worklet/**"
    ],
    "coverageDirectory": "<rootDir>/../coverage"
  },
  "dependencies": {
    "popmotion": "^9.3.5",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@types/jest": "^26.0.21",
    "babel-loader": "^8.2.2",
    "bundlesize": "^0.18.1",
    "husky": "=4",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.42.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/motion.min.js",
      "maxSize": "1 kB"
    }
  ]
}
