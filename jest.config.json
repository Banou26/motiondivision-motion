{
  "preset": "ts-jest",
  "rootDir": "src",
  "collectCoverageFrom": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/__tests__/**"
  ],
  "setupFilesAfterEnv": ["<rootDir>/../jest-setup.ts"],
  "coverageDirectory": "<rootDir>/../coverage",
  "testMatch": ["**/__tests__/**/*.test.(js|ts)?(x)"],
  "testPathIgnorePatterns": ["ssr.test.tsx"],
  "watchPlugins": [
    "jest-watch-typeahead/filename",
    "jest-watch-typeahead/testname"
  ]
}
